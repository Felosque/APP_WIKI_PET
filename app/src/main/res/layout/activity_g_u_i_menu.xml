<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUIMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/txtMenu"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnAdd"
                        android:layout_width="101dp"
                        android:layout_height="115dp"
                        android:backgroundTint="#003F51B5"
                        android:contentDescription="@string/app_name"
                        android:onClick="btnAdd_Click"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_agregar"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/txtRegistrar"
                        android:layout_width="101dp"
                        android:layout_height="19dp"
                        android:text="@string/txtRegistrar"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/btnDel"
                        android:layout_width="101dp"
                        android:layout_height="115dp"
                        android:backgroundTint="#003F51B5"
                        android:contentDescription="@string/app_name"
                        android:onClick="btnDel_Click"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_eliminar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        tools:srcCompat="@tools:sample/avatars" />



                    <TextView
                        android:id="@+id/txtElimnar"
                        android:layout_width="101dp"
                        android:layout_height="19dp"
                        android:text="@string/txtEliminar"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnChos"
                        android:layout_width="101dp"
                        android:layout_height="115dp"
                        android:backgroundTint="#003F51B5"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:onClick="btnBuscar_Click"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_buscar"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/txtBuscar"
                        android:layout_width="101dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:text="@string/txtBuscar"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/btnEdit"
                        android:layout_width="101dp"
                        android:layout_height="115dp"
                        android:backgroundTint="#003F51B5"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:onClick="btnEditar_Click"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_editar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.59"
                        tools:srcCompat="@tools:sample/avatars" />



                    <TextView
                        android:id="@+id/txtEdit"
                        android:layout_width="101dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:text="@string/txtEditar"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0" />


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnList"
                            android:layout_width="101dp"
                            android:layout_height="115dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#003F51B5"
                            android:contentDescription="@string/app_name"
                            android:onClick="btnListar_Click"
                            android:scaleType="centerInside"
                            android:src="@mipmap/img_listar"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/txtList"
                            android:layout_width="101dp"
                            android:layout_height="17dp"
                            android:layout_below="@+id/btnList"
                            android:layout_gravity="center"
                            android:text="@string/txtListar"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center">


                        <ImageButton
                            android:id="@+id/btnExit"
                            android:layout_width="101dp"
                            android:layout_height="117dp"
                            android:backgroundTint="#003F51B5"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:onClick="btnVolver_Click"
                            android:scaleType="centerInside"
                            android:src="@mipmap/img_salir"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:id="@+id/txtSalir"
                            android:layout_width="101dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:text="@string/txtSalir"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textStyle="bold" />

                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>